{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Claude: Login",
      "type": "shell",
      "command": "zsh",
      "args": ["-lc", "printf '/login' | /opt/homebrew/bin/claude --print"],
      "presentation": { "reveal": "always", "panel": "dedicated" }
    },
    {
      "label": "Claude: Ask (prompt)",
      "type": "shell",
      "command": "/opt/homebrew/bin/claude --print \"${input:prompt}\"",
      "presentation": { "reveal": "always", "panel": "dedicated" }
    },
    {
      "label": "Claude: Ask (clipboard)",
      "type": "shell",
      "command": "zsh",
      "args": ["-lc", "pbpaste | /opt/homebrew/bin/claude --print"],
      "presentation": { "reveal": "always", "panel": "dedicated" }
    }
  ],
  "inputs": [
    {
      "id": "prompt",
      "type": "promptString",
      "description": "Claude へのプロンプト",
      "default": "このコードをレビューして改善点を出して"
    }
  ]
}